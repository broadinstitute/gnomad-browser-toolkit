{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "gnomad-graphql-rc",
    "labels": {
      "state": "serving"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "gnomad-graphql-app"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "gnomad-graphql-app"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "gnomadel-graphql-pod",
            "image": "gcr.io/exac-gnomad/gnomadgraphql",
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}